<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pfgAlex.miroboadvisor1_0.ui.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:text="@string/btn_login"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPass" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="155dp"
            android:layout_height="49dp"
            android:layout_marginTop="44dp"
            android:text="@string/btn_register"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <Button
            android:id="@+id/btn_newPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/btn_newPass"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_register" />


        <ImageView
            android:id="@+id/logotipo"
            android:layout_width="176dp"
            android:layout_height="181dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="554dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/editTextPass"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="398dp"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:ems="15"
            android:text="firebase"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

        <EditText
            android:id="@+id/editTextEmail"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="399dp"
            android:layout_height="51dp"
            android:layout_marginTop="308dp"
            android:ems="15"
            android:text="alexhernan94@gmail.com"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>